{
  "name": "node-api-typescript",
  "version": "0.0.1",
  "description": "Simple API build with Express and TypeORM",
  "main": "src/index.js",
  "scripts": {
    "server": "./node_modules/.bin/nodemon ./src/index.js",
    "start": "tsc && node src/index.js",
    "test": "nyc mocha",
    "build": "echo \"Error: building for production is not ready yet\" && exit 1",
    "lint": "npx eslint --fix ./**/*",
    "typeorm": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "db:init": "npm run typeorm schema:sync && npm run typeorm migration:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Saniol/node-api-typescript.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "orm"
  ],
  "author": "Micha≈Ç Sadowski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Saniol/node-api-typescript/issues"
  },
  "homepage": "https://github.com/Saniol/node-api-typescript#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "pg": "^8.0.3",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/node": "^13.13.2",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.3",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
