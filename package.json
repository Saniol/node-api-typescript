{
  "name": "node-api-typescript",
  "version": "0.0.1",
  "description": "Simple API build with Express and TypeORM",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "build": "tsc",
    "serve": "node -r dotenv/config dist/index.js",
    "watch": "npx nodemon -r dotenv/config ./src/index.ts",
    "test": "nyc mocha --file ./test/setup.ts ./test/**/*.test.ts",
    "lint": "npx eslint --fix ./**/*",
    "typeorm": "node ./node_modules/typeorm/cli.js",
    "db:init": "npm run typeorm schema:sync && npm run typeorm migration:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Saniol/node-api-typescript.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "orm",
    "restapi"
  ],
  "author": "Micha≈Ç Sadowski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Saniol/node-api-typescript/issues"
  },
  "homepage": "https://github.com/Saniol/node-api-typescript#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "pg": "^8.0.3",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.2",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.3",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.20",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.19",
    "supertest": "^4.0.2",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
